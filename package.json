{
  "name": "fastify-typescript",
  "version": "1.0.0",
  "author": "",
  "license": "MIT",
  "description": "Fastify typescript",
  "main": "main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "dev": "NODE_ENV=development ts-node-dev ./src/main.ts | pino-pretty --colorize",
    "update:packages": "npx npm-check-updates -u",
    "lint": "eslint '{src,test}/**/*.ts'",
    "lint:fix": "eslint --fix '{src,test}/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest --config test/jest.json --runInBand --passWithNoTests --forceExit",
    "migration:create": "cross-env yarn sequelize migration:create --name migration",
    "migration:make": "cross-env yarn sequelize-mig migration:make -n migration",
    "migration:run": "cross-env yarn sequelize db:migrate",
    "migration:init": "cross-env yarn sequelize init"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^9.4.2",
    "@sequelize/core": "^7.0.0-alpha.45",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "fastify": "^4.28.1",
    "generate-password": "^1.7.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.12.0",
    "nodemailer": "^6.10.0",
    "pg": "^8.13.3",
    "pino": "^9.2.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.5",
    "sequelize-cli": "^6.6.2",
    "sequelize-mig": "^3.1.3",
    "sequelize-typescript": "^2.1.6",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "~2.4.6",
    "@types/eslint": "8.56.10",
    "@types/eslint-config-prettier": "~6.11.3",
    "@types/eslint-plugin-prettier": "3.1.3",
    "@types/http-errors": "2.0.4",
    "@types/jest": "29.5.12",
    "@types/jsonwebtoken": "9.0.6",
    "@types/lint-staged": "~13.3.0",
    "@types/node": "20.14.10",
    "@types/nodemon": "1.19.6",
    "@types/pino": "7.0.4",
    "@types/prettier": "2.7.3",
    "@types/tap": "~15.0.11",
    "@typescript-eslint/eslint-plugin": "7.16.0",
    "@typescript-eslint/parser": "7.16.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.2.7",
    "nodemon": "3.1.4",
    "nyc": "17.0.0",
    "pino-pretty": "11.2.1",
    "prettier": "3.3.3",
    "sequelize-typescript-migration": "^0.0.1-beta.3",
    "stop-only": "^3.3.2",
    "tap": "21.0.0",
    "ts-node": "10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.5.3"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,js,json}": [
      "prettier --write '{src,test}/**/*.ts'",
      "eslint --fix",
      "stop-only --file"
    ]
  }
}
